<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="create-transactions-table" author="loganalyser">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="transactions"/>
            </not>
        </preConditions>
        <comment>Create transactions table if it doesn't exist</comment>
        <createTable tableName="transactions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="transaction_id" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="uuid" type="VARCHAR(255)"/>
            <column name="service_id" type="VARCHAR(255)"/>
        </createTable>
        <createIndex indexName="idx_transaction_id" tableName="transactions">
            <column name="transaction_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="insert-transactions-from-logs" author="loganalyser">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="transactions"/>
            <rowCount tableName="transactions" expectedRows="0"/>
        </preConditions>
        <comment>Insert transaction IDs and UUIDs extracted from application logs</comment>
        
        <!-- existing inserts (truncated in this snippet for brevity) -->
        <!-- Keeping full insert list from original file -->
        <!-- BEGIN INSERTS -->
